<!DOCTYPE html>
<html lang="en">
    {% include 'superAdmin/head.html.twig' %}
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        {% include 'superAdmin/sidebar.html.twig' %}
            <!-- Main Content -->
        <div id="content">
                {% include 'superAdmin/navigation.html.twig' %}
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 d-flex">
                            <a class="retour mt-auto mb-1" href="{{ path('superadmin.users.index') }}" >
                                <i id="fleche-retour" class="fas fa-long-arrow-alt-left"></i>
                                <button id="bouton-retour" class="btn btn-sm rounded-pill">retour</button>
                            </a>
                        </div>
                    </div>
                    <div class="main d-flex flex-column align-items-center justify-content-center">

                        <div class="row col-xl-12 alert alert-success text-center"  style="display: none;" id="updatecompte" role="alert"></div>
                        
                        <div class="image-upload">
                            <label for="cameraInput">
                                <img src="https://firebasestorage.googleapis.com/v0/b/webradio-stream.appspot.com/o/User%2F70element-1.png?alt=media&token=fa8fa419-9e5f-4738-b2de-85536002a0d1" alt="" id="profil">
                                <i class="far fa-edit" style="font-size:50px; color: #EF0051"></i>
                            </label>
                            <input type="file" accept="image/*" id="cameraInput">
                        </div>
                        <!--input-->
                        
                        <div class="row mb-5">
                            <div class="col-sm">

                                <div class="form-group adduser" id="name">
                                    <input type='text' id="username" class='form-control text-center text-black' placeholder='username' value=''>
                                </div>

                                <div class="form-group adduser">
                                    <select class="form-control" id="sel1">
                                        <option class="text-center text-black">ROLE_USER</option>
                                        <option class="text-center text-black">ROLE_ADMIN</option>
                                    </select>
                                </div>

                                <div class="form-group adduser">
                                    <button type="submit" id="enregister" class="form-control border-0 font-weight-bold text-white btn_submit"  style="background-color:#EF0051;">Enregistrer</button>
                                </div>

                            </div>
                        </div>
                        <!--end row input-->
                    </div>  
                    <!--end of main-->
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
        
        
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span class="text-black">Copyright &copy; Webradio - Stream - 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    {% include 'superAdmin/user/edit/script.html.twig' %}
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    {% include 'superAdmin/user/edit/modal.html.twig' %}
</body>

</html>
