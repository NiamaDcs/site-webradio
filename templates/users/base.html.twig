<!DOCTYPE html>
<html lang="en">
    {% include 'Users/head.html.twig' %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
  {% include 'Users/sidebar.html.twig' %}
      <!-- Main Content -->
      <div id="content">
        {% include 'Users/navigation.html.twig' %}
        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="">
              <h3 class="h3 mb-2 text-gray-800">Dashboard</h3>
          </div>

            <div class="main">
              <!-- Content Row -->
                <div class="row">
                    <!-- Nombre favoris Card Example -->
                    <div class="col-xl-3 col-md-6">
                    <div class="card shadow h-80 border-raduis py-2">
                        <div class="card-body">
                        <div class="row">
                            <div class="col mr-2 d-flex flex-column align-items-center justify-content-center">
                            <div class="text-principal justify-content-center">Nombre favoris</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="nbFavoris"></div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>

                <!-- Nombre d’ecoutes Card Example -->
                <div class="col-xl-3 col-md-6">
                  <div class="card shadow h-80 border-raduis py-2">
                      <div class="card-body">
                      <div class="row">
                          <div class="col mr-2 d-flex flex-column align-items-center justify-content-center">
                          <div class="text-bleue">Nombre d’ecoutes</div>
                          <div class="h5 mb-0 font-weight-bold text-gray-800" id="nbEcoute"></div>
                          </div>
                      </div>
                      </div>
                  </div>
                </div>

                <!-- Total de plannification -->
                <div class="col-xl-3 col-md-6">
                  <div class="card shadow h-80 border-raduis py-2">
                    <div class="card-body">
                      <div class="row">
                        <div class="col mr-2 d-flex flex-column align-items-center justify-content-center">
                          <div class="text-turquoise">Total de plannification</div>
                          <div class="h5 mb-0 font-weight-bold text-gray-800" id="nbPlan"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Nombre de stream Card Example -->
                <div class="col-xl-3 col-md-6">
                  <div class="card shadow h-80 border-raduis py-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col mr-2 d-flex flex-column align-items-center justify-content-center">
                              <div class="text-purple">Nombre de stream créée</div>
                              <div class="h5 font-weight-bold text-gray-800" id="nbStream"></div>
                            </div>
                        </div>
                    </div>
                  </div>
                </div>
            </div>
            <div class="satistique ">
                <!-- Content Row -->
                <div class="row">

                  <!-- Area Chart -->
                  <div class="col-xl-8 col-lg-7">
                    <div class="card shadow mb-4">
                      <!-- Card Header - Dropdown -->
                      <div class="card-header d-flex flex-row align-items-center justify-content-between">
                            <h6 class="text-purple mt-2">Nombre d’écoute par mois</h6>
                      </div>
                      <!-- Card Body -->
                      <div class="card-body">
                        <div class="chart-area">
                          <canvas id="myAreaChart"></canvas>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Pie Chart -->
                  <div class="col-xl-4 col-lg-5">
                    <div class="card shadow mb-4">
                      <!-- Card Header - Dropdown -->
                      <div class="card-header d-flex flex-row align-items-center justify-content-between">
                            <h6 class="text-purple mt-2">Nombre d’abonnements par jour</h6>
                        </div>
                      <!-- Card Body -->
                      <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                          <canvas id="myPieChart"></canvas>
                        </div>
                        <div class="mt-4 text-center small">
                          <span class="mr-2 text-black">
                            <i class="fas fa-circle text-info"></i> Lundi
                          </span>
                          <span class="mr-2 text-black">
                            <i class="fas fa-circle text-success"></i> Mercredi 
                          </span>
                          <span class="mr-2 text-black">
                            <i class="fas fa-circle text-primary"></i> Samedi
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
              <!-- /Content Row -->
            </div>  
          </div>
        </div>
    <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span class="text-black">Copyright &copy; Webradio - Stream - 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

